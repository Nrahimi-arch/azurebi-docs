{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build via DocFX",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "docfx docfx.json"
        },
        {
            "label": "Build and Serve via DocFX",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "docfx docfx.json --serve"
        }
    ]
}